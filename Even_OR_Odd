 #include <stdio.h>
 int main() {
 int num[10],i, evenCount = 0, oddCount = 0;
 printf("Enter 10 numbers: ");
 for(i=0;i<10;i++)
 scanf("%d", &num[i]);
 printf("\nEven numbers are:\n");
 for(i=0;i<10;i++)
 {
 if(num[i] % 2 == 0)
 printf("%d ", num[i]);
 evenCount++;
 }
 printf("\ncount of even numbers is : %d\n", evenCount);
 printf("\nOdd numbers are:\n");
 
 for(i=0;i<10;i++)
 {
 if(num[i] % 2 != 0)
 printf("%d ", num[i]);
 oddCount++;
 
 }
 printf("\ncount of odd numbers is : %d\n", oddCount);
 return 0;
 }
